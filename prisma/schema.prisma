generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  clientId           String    @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  Personal           Personal? @relation(fields: [personalPersonalId], references: [personalId])
  personalPersonalId String?   @db.ObjectId
  email              String   @unique
  password           String
}

model Personal {
  personalId   String   @id @default(auto()) @map("_id") @db.ObjectId
  namePersonal String
  cpf          String
  client       Client[]
}

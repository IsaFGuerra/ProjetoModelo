generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  sport  String

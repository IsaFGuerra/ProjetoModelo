generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  sport String
  Personal   Personal? @relation(fields: [personalId], references: [id])
  personalId String?   @db.ObjectId
}

model Personal {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  namePersonal   String
  sport  String
  cpf    String
  client Client[]
}
